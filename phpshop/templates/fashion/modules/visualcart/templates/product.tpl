<!-- Product Content -->
<div class=" pb-2 mb-2 w-80">
    <div class="media">
        <div class="avatar avatar-lg mr-3">
            <img class="avatar-img" src="@visualcart_product_pic_small@" alt="">
            <sup class="avatar-status avatar-primary">@visualcart_product_num@</sup>
        </div>
        <div class="media-body">
            <a class="h6 text-left" href="@shopDir@/shop/UID_@visualcart_product_id@@visualcart_product_seo@.html">@visualcart_product_name@</a>
            <div class="text-body font-size-1">
                <span>{Цена}:</span>
                <span>@visualcart_product_price@ @visualcart_product_currency@</span>
            </div>
        </div>
    </div>
</div>
<!-- End Product Content -->