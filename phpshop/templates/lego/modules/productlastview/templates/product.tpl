
<div class="col-md-3 col-sm-3 col-xs-6 product-block-wrapper-fix">
    <div>
        <div class="product-block-top">
            <a class="product-img" href="@shopDir@@productlastview_product_url@.html"  title="@productlastview_product_name@"><img src="@productlastview_product_pic_small@" alt="@productlastview_product_name@"></a>
            <span class="sale-icon-content ">
                @specIcon@
                @newtipIcon@
            </span>

        </div>

        <div class="caption">

            <div class="price-block">

                <h4 class="new-price">@productlastview_product_price@<span class="rubznak">@productlastview_product_currency@</span></h4>
                <h5 class="old-price">@productlastview_product_price_old@</h5>
            </div>
            <div class="rating">
                @rateCid@
            </div>
            <h5 class="product-name"><a href="@shopDir@@productlastview_product_url@.html" title="@productlastview_product_name@">@productlastview_product_name@</a></h5>
        </div>
    </div>
</div>