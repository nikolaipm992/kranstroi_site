<div class="col-sm-4 col-lg-4 mb-2 mb-sm-8">
    <!-- Blog Card -->
    <article class="card h-100 transition-3d-hover">
        <div class="position-relative">
            <img class="img-fluid p-0 w-100" src="@pageIcon@" alt="" loading="lazy">
        </div>

        <div class="card-body">
            <h3><a class="text-inherit" href="/page/@pageLink@.html">@pageName@</a></h3>
            <span class="text-muted small">@pagePreview@</span>
        </div>

        <div class="card-footer border-0 pt-0">
            <div class="media align-items-center">
                <div class="media-body d-flex justify-content-end small text-muted font-size-1 ml-2">
                    @pageData@
                </div>
            </div>
        </div>
    </article>
    <!-- End Blog Card -->
</div>
